<div class="form-group row">
  <label class="col-form-label col-sm-12" for="Title">Title</label>
  <div class="col-sm-12">
    <input readonly class="form-control" id="Title" value="<%= model.Title %>" />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-12" for="Description">Description</label>
  <div class="col-sm-12">
    <input readonly class="form-control" id="Description" value="<%= model.Description %>" />
  </div>
</div>

<div class="form-group row">
  <div class="col-sm-6">
    <label for="Author">Author</label>
    <input readonly class="form-control" id="Author" value="<%= model.Author %>" />
  </div> 
  <div class="col-sm-6">
    <label for="Tags">Tags</label>
    <input readonly class="form-control" id="Tags" value="<%= model.Tags %>" />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-12" for="Content">Content</label>
  <div class="col-sm-12">
    <div readonly class="form-control" cols="20" id="Content" rows="15"><%- model.Content %></div>
  </div>
</div>