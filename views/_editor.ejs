<div class="form-group row">
    <div class="col-sm-12">
        <label class="col-form-label" for="Title">Title</label>
        <input autofocus class="form-control" name="Title" value="<%= model.Title %>" />
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-12">
    <label class="col-form-label" for="Description">Description</label>
        <input class="form-control" name="Description" value="<%= model.Description %>" />
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-6">
        <label for="Author">Author</label>
        <input class="form-control" name="Author" value="<%= model.Author %>" />
    </div>
    <div class="col-sm-6">
        <label for="Tags">Tags</label>
        <input class="form-control" name="Tags" value="<%= model.Tags %>" />
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-12 mb-5">
    <label class="col-form-label" for="Content">Content</label>
        <div id='editor' class="form-control">
            <%- model.Content %>
        </div>
    </div>
    <input type='hidden' id='Content' name="Content">
</div>
<script>
    if (document.getElementById("editor")) {
        var quill = new Quill('#editor', {
            theme: 'snow'
        });
    }

    document.querySelector("form").addEventListener('submit', function() {
        document.getElementById('Content').value = document.getElementsByClassName('ql-editor')[0].innerHTML;
    });
</script>